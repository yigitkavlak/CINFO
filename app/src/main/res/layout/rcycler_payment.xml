<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="35dp"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/recyclerview_user_paymenttype"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/comfortaa_regular"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="Ödeme Tipi"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recyclerview_user_paymentPrice"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="@font/comfortaa_regular"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:text="Fiyat"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerview_user_paymenttype" />

    <TextView
        android:id="@+id/recyclerview_user_paymentDate"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="@font/comfortaa_regular"
        android:gravity="center"
        android:text="Ödeme Tarihi"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerview_user_paymentPrice" />

</androidx.constraintlayout.widget.ConstraintLayout>